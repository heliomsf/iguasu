<h1>Entries</h1>
<%= form_with url: entries_path, method: :get, local: true do %>
  <%= label_tag :search, "Search:" %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>

<ul>
<% @entries.each do |entry| %>
  <div>
    <h2><%= entry.title %></h2>
    <p><%= entry.author %></p>
    <!-- Add other entry details here -->
  </div>
<% end %>

<%= paginate @entries %>
</ul>
